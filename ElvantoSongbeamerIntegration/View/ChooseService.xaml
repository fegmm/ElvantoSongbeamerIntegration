        <Button Name="changeToServiceCreator" Content="Zu Titel-Eingabe wechseln" HorizontalAlignment="Left" Margin="333.682,106.755,0,0" VerticalAlignment="Top" Width="163" Height="29" Click="changeToServiceCreator_Click"/>

        <Label Name="errorLabel" Content="" HorizontalAlignment="Left" Margin="48,403,0,0" VerticalAlignment="Top" Background="{x:Null}" Width="466" Foreground="Red" FontWeight="Bold"/>
        <Button Name="buttonStart" Content="Start" HorizontalAlignment="Left" Margin="85,437,0,0" VerticalAlignment="Top" Width="163" Height="29" Click="buttonStart_Click"/>
        <CheckBox Name="optionOpenSongbeamer" Content="Erstellten Ablauf in Songbeamer öffnen" IsChecked="True" HorizontalAlignment="Left" Margin="269,444,0,0" VerticalAlignment="Top" />
        <ListBox Name="serviceListBox" HorizontalAlignment="Left" Height="67.852" Margin="178.2,67.903,0,0" VerticalAlignment="Top" Width="126.145" SelectiveScrollingGrid.SelectiveScrollingOrientation="None" SelectedIndex="1" SelectionChanged="serviceListBox_SelectionChanged"/>
