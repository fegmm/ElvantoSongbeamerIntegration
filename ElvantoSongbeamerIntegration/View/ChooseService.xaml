<Page x:Class="SongbeamerSongbookIntegrator.View.ChooseService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SongbeamerSongbookIntegrator.View"
      mc:Ignorable="d" 
       d:DesignHeight="490" d:DesignWidth="570" 
      Title="ChooseService">

    <Grid>
        <Label Content="" HorizontalAlignment="Left" Margin="46,19.828,0,0" VerticalAlignment="Top"/>

        <Label Content="Einstellungen:" HorizontalAlignment="Left" Margin="47.999,71.15,0,0" VerticalAlignment="Top"/>
